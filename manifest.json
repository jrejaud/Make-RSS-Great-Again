{
  "name": "Make RSS Great Again",
  "version": "0.0.1",
  "description": "Adds RSS buttons to websites",
  "manifest_version": 2,
  "web_accessible_resources": [
    "img/*.*"
  ],
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/Utils.js"]
    },
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "js": [
        "twitter/twitter_content_script.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["youtube/youtube_content_script.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs"
  ]
}
